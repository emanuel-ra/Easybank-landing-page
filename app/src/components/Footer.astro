---
import Button from './Buttons/ButtonPrimary.astro'
import Facebook from './icons/Facebook.astro'
import Instagram from './icons/Instagram.astro'
import Logo from './icons/Logo.astro'
import Pinterest from './icons/Pinterest.astro'
import Twiter from './icons/Twiter.astro'
import Youtube from './icons/Youtube.astro'
const data = [
  'About Us',
  'Blog',
  'Contact',
  'Careers',
  'Support',
  'Privacy Policy',
]
---

<footer class='px-10 py-10 lg:px-40'>
  <div class='flex flex-col lg:flex-row gap-y-10 lg:justify-between'>
    <div class='flex flex-col gap-y-8 lg:flex-row lg:gap-x-10'>
      <div
        class='flex flex-col justify-center items-center lg:justify-between gap-y-10'
      >
        <Logo class='text-white' />

        <div class='flex gap-x-2'>
          <a
            href='#'
            class='group'
          >
            <Facebook class='fill-white group-hover:fill-secondary' />
          </a>
          <a
            href='#'
            class='group'
          >
            <Youtube class='fill-white group-hover:fill-secondary' />
          </a>
          <a
            href='#'
            class='group'
          >
            <Twiter class='fill-white group-hover:fill-secondary' />
          </a>
          <a
            href='#'
            class='group'
          >
            <Pinterest class='fill-white group-hover:fill-secondary' />
          </a>
          <a
            href='#'
            class='group'
          >
            <Instagram class='fill-white group-hover:fill-secondary' />
          </a>
        </div>
      </div>

      <div class=''>
        <ul
          class='grid grid-cols-1 lg:grid-cols-2 gap-x-4 h-full gap-y-2 text-white text-center'
        >
          {
            data.map((item) => (
              <li class='text-base '>
                <a
                  class=' flex items-center justify-center lg:justify-start  transition  ease-in-out hover:text-secondary   '
                  href={`#${item}`}
                >
                  {item}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div class='flex flex-col justify-center items-center gap-y-3'>
      <div class='flex justify-center items-center'>
        <Button
          class=''
          label='Request Invite'
        />
      </div>
      <span class='text-white/70 text-sm'>Â© Easybank. All Rights Reserved</span
      >
    </div>
  </div>
  <style>
    footer {
      background-color: hsl(233, 26%, 24%);
    }
    .copyright {
      color: hsl(0, 0%, 100%);
    }
  </style>
</footer>
