---
// Supports weights 100-900
import '@fontsource-variable/public-sans'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='This is a solution to the Easybank landing page challenge on Frontend Mentor. Frontend Mentor challenges help you improve your coding skills by building realistic projects.'
    />
    <meta
      name='keywords'
      content='Fronted Mentor, Easybank landing page'
    />

    <meta
      name='author'
      content='Tomas Emanuel Ramirez Abarca'
    />

    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body class='flex justify-center'>
    <div class='w-[375px] md:w-[768px] lg:w-full max-w-[1440px] wrapper'>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    font-family: 'Public Sans Variable', sans-serif;
  }

  blockquote {
    color: hsl(233, 8%, 62%);
  }
</style>
